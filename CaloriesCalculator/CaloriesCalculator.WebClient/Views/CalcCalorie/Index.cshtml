<!DOCTYPE html>
<html>
<head>
    <title>Калькулятор калорий</title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Калькулятор калорий</h1>

        <!-- Форма для выбора продукта -->
        <form id="calculatorForm">
            <div class="form-group">
                <label for="productInput">Введите продукт:</label>
                <input type="text" class="form-control" id="productInput" autocomplete="off" required>
                <div id="productListContainer"></div>
            </div>

            <button type="submit" class="btn btn-primary">Рассчитать</button>
        </form>

        <!-- Результаты калькуляции -->
        <div id="resultContainer" class="mt-3" style="display: none;">
            <h3>Результаты:</h3>
            <p>Калории: <span id="caloriesOutput"></span></p>
        </div>
    </div>

    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            // Обработка ввода продукта
            $("#productInput").on("input", function () {
                var inputValue = $(this).val();

                if (inputValue.length >= 2) {
                    // Отправка запроса на получение списка продуктов
                    $.ajax({
                        url: "/Calc/GetProducts",
                        type: "GET",
                        data: { query: inputValue },
                        success: function (response) {
                            // Отображение выпадающего списка с продуктами
                            var productList = $("#productListContainer");
                            productList.empty();

                            $.each(response, function (index, product) {
                                var listItem = $("<div>").addClass("list-item").text(product.name);
                                productList.append(listItem);
                            });

                            productList.show();
                        },
                        error: function () {
                            alert("Произошла ошибка при получении списка продуктов.");
                        }
                    });
                } else {
                    $("#productListContainer").hide();
                }
            });

            // Обработка выбора продукта из списка
            $(document).on("click", ".list-item", function () {
                var selectedProduct = $(this).text();
                $("#productInput").val(selectedProduct);
                $("#productListContainer").hide();
            });

            // Обработка отправки формы
            $("#calculatorForm").submit(function (event) {
                event.preventDefault();

                var selectedProduct = $("#productInput").val();

                // Отправка запроса на рассчет калорий на сервер
                $.ajax({
                    url: "/Calc/CalculateCalories",
                    type: "POST",
                    data: { product: selectedProduct },
                    success: function (response) {
                        // Отображение результатов
                        $("#caloriesOutput").text(response.calories);
                        $("#resultContainer").show();
                    },
                    error: function () {
                        alert("Произошла ошибка при рассчете калорий.");
                    }
                });
            });
        });
    </script>
</body>
</html>
